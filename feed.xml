---
layout: null
permalink: /feed.xml
---
<?xml version="1.0" encoding="UTF-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
  <title>{{ site.title }} Blog</title>
  <link href="{{ '/feed.xml' | absolute_url }}" rel="self" />
  <link href="{{ '/blog/' | absolute_url }}" />
  <updated>{{ site.time | date_to_xmlschema }}</updated>
  <id>{{ '/blog/' | absolute_url }}</id>
  <author>
    <name>{{ site.title }}</name>
  </author>
  {% for post in site.posts %}
  <entry>
    <title>{{ post.title | escape }}</title>
    <link href="{{ post.url | absolute_url }}" />
    <id>{{ post.url | absolute_url }}</id>
    <updated>{{ post.last_modified_at | default: post.date | date_to_xmlschema }}</updated>
    <published>{{ post.date | date_to_xmlschema }}</published>
    <summary>{{ post.description | default: post.excerpt | strip_html | strip_newlines | truncate: 200 | escape }}</summary>
  </entry>
  {% endfor %}
</feed>
